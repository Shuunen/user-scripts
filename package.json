{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/user-scripts/issues",
  "description": "personal heavily opinionated script I make to enhance my daily web experience",
  "devDependencies": {
    "@babel/core": "*",
    "@types/node": "18",
    "eslint": "8.39",
    "eslint-config-hardcore": "35",
    "eslint-plugin-filenames": "1",
    "eslint-plugin-unicorn": "46",
    "repo-check": "1.31",
    "shuutils": "7.2",
    "tsm": "2",
    "typescript": "5",
    "uvu": "0",
    "watchlist": "0"
  },
  "files": [
    "src",
    "*"
  ],
  "homepage": "https://github.com/Shuunen/user-scripts",
  "keywords": [
    "user-script"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/user-scripts",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/user-scripts.git"
  },
  "scripts": {
    "check": "repo-check",
    "ci": "npm run lint && npm run check && npm run test && echo ci success",
    "lint": "tsc --noEmit && eslint --cache --fix --ignore-path .gitignore --ext .js,.ts . && echo lint success",
    "lint:watch": "watchlist src tests -eager -- npm run lint",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "test": "uvu -r tsm tests && echo test success",
    "test:watch": "watchlist src tests -eager -- npm test"
  },
  "version": "1.0.0"
}