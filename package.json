{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/user-scripts/issues",
  "description": "personal heavily opinionated script I make to enhance my daily web experience",
  "devDependencies": {
    "@types/node": "18",
    "eslint": "8.41",
    "eslint-config-hardcore": "36",
    "eslint-plugin-filenames": "1",
    "eslint-plugin-tailwindcss": "3",
    "eslint-plugin-unicorn": "47",
    "repo-check": "1.31",
    "shuutils": "7.3",
    "tailwindcss": "3",
    "typescript": "5",
    "vitest": "0.31"
  },
  "files": [
    "src",
    "*"
  ],
  "homepage": "https://github.com/Shuunen/user-scripts",
  "keywords": [
    "user-script"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/user-scripts",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/user-scripts.git"
  },
  "scripts": {
    "check": "pnpm lint && repo-check && pnpm test && echo check success",
    "lint": "tsc --noEmit && eslint --cache --fix --ext .js,.ts . && echo lint success",
    "postversion": "git push && git push --tags",
    "preversion": "pnpm check",
    "test": "vitest --run && echo test success",
    "test:update": "vitest --run --update && echo test update success",
    "test:watch": "vitest"
  },
  "version": "2.1.0"
}
